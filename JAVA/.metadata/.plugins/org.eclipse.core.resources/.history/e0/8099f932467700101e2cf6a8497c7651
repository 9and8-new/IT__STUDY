package Ch07반복문;

public class C01While {

	public static void main(String[] args) {

		
		// 00 기본 문법
//		while(조건식 ) {
//			조건식이 ture 인 동안 실행되는 종속문장
//		}

		// 01 HELLO WORLD 10회 출력
		// 탈출용 변수 : i
		// 탈출용 조건식 : i<10
		// 탈출 연산식 : i++
		int i=0;
		while(i<10) {
			System.out.println("HELLO WORLD");
			i++;
		}
	}

}

package Ch02;

public class C06정리문제 {

	public static void main(String[] args) {
//		정수 타입 		: byte,short,int ,long
//		char 타입 	: ' ' 
//		String 타입 	: " "
//		실수 타입 		: double , float
//		논리 타입 		: boolean
//
//
//		확인 문제1
//
//		정수타입 
//		1byte : byte
//		2byte : char / short
//		4byte : int 
//		8byte : long 
//
//		실수타입
//		4byte : float
//		8byte : double
//
//		논리타입
//		1byte : boolean
		char var=65;
		System.out.print(var);
//		확인문제2
//		맞는 코드인지 틀린 코드인지 확인 
//		byte var = 200;							( X	)
//		char var='AB';							( X	) 캐릭터는 문자하나
//		char var=65;							( O )
//		long var=50000000000;					( X	) 수치가 안담김	
//		float var = 3.14;						( X	)
//		double var = 100.0;						( O	)
//		String var = "나의직업은 "개발자" 입니다.";		( X ) ""의 문제
//		boolean var = 0;						( X	) 자바에서는 True False값을 숫자형태로 표시못함
//		int v2 = 1e2; 1*10^2					( X ) 큰공간의값을 작은공간에 넣어서
//		float = 1e2f;	 						( X	) 변수명이 없음
		
		
		
		

	}

}

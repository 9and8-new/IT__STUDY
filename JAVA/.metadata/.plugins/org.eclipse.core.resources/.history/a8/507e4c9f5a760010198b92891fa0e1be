		//------------------------------------
//		int n2 = 173;			//10진정수값
//		int n3 = 0255;			//8진수
//		int n4 = 0xad;			//16진수
//		System.out.printf("%d %d %d\n", n2,n3,n4);
		
		//-------------------------------------
		//정수 byte - 1byte 정수 부호 O
		//------------------------------------
//		byte n5 = (byte)-129;
//		byte n6 = -30;
//		byte n7 = 30;
//		byte n8 = 127;

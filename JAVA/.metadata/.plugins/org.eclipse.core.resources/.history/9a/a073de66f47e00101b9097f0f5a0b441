package Ch01;

class C02Simple{
	
	int n;
	C02Simple(int n){
		this.n = n;
	}
	// equals 재정의
	@Override
	// 헤더는 그대로 // 외부로부터 모든객체를 다 받을수 있는 상태로 업캐스팅
	public boolean equals(Object obj) 
	{
		
		if(obj instanceof C02Simple ) { // C02Simple판단 후 맞으면 다운캐스팅
			C02Simple down = (C02Simple)obj; //강제 형변환
			return this.n == down.n;
			
		}
		
		return false;
	}
	
}


public class C03ObjectMain2 {

	public static void main(String[] args) {
		C02Simple ob1 = new C02Simple(10);
		C02Simple ob2 = new C02Simple(10);
		C02Simple ob3 = new C02Simple(20);
		
		System.out.println(ob1);
		System.out.println(ob2);
		System.out.println(ob3);
		System.out.println("====");
		System.out.println(ob1.equals(ob2));
		System.out.println(ob1.equals(ob3));

	}

}

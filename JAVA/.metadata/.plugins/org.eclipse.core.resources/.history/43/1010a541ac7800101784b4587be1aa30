package Ch01;

// 변수 종류

// 멤버 변수			: 클래스 내부와 메서드 영역 외부 사이, 객체 개별데이터 저장용도
// 지역 변수			: 메서드 영역 내부에서 생성되는 변수
//						(or 메서드 영역 내부에서 {}가 명시되어 있을 때 해당{} 내에서 생성되는 변수도 포함)
//						ex) 파라미터변수, 일반변수..
// static 변수		: 동일 클래스로부터 생성된 여러 객체간 공유하는 멤버변수 / 웹개발할때 많이 사용함

class C05Simple // 클래스 범위 안에서 사용.
{
	// 속성 //클래스의 속성은 멤버라고 말하며 멤버변수라고 칭함
	int num = 10; // 멤버 변수 | 공통적으로 접근가능

	// 기능
//	void Func(지역변수) {}
	void Func1() {
		System.out.println("num : " + num);
		int num = 20; //Func1 의 지역 변수 
		num++;
		this.num++; // 멤버의 num에 접근할때 this를 붙인다.		|	num 색깔로 어디변수 num인지 구분가능
		System.out.println("num : " + num); // 여기서 num은 Func1에서 선언한 지역 변수 num을 출력하게 됨.
	}

	void Func2() {
		System.out.println("num : " + num);
		if(num>0) // 멤버변수 num  
		{
			System.out.println("num :" + num);
		}
	}

}

public class C05LocalVarMain지역변수 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		C05Simple obj = new C05Simple();
		obj.Func1();
		System.out.println("==================");
		obj.Func2();
	}

}

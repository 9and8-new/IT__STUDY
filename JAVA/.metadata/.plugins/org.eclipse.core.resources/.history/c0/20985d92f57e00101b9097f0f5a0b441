package Ch01;

class C03Simple{
	
	int n;
	C03Simple(int n){
		this.n = n;
	}
	// equals 재정의
	@Override
	// 헤더는 그대로 // 외부로부터 모든객체를 다 받을수 있는 상태로 업캐스팅
	public boolean equals(Object obj) 
	{
		
		if(obj instanceof C03Simple ) { // C02Simple판단 후 맞으면 다운캐스팅
			C03Simple down = (C03Simple)obj; //강제 형변환
			return this.n == down.n;
			
		}
		
		return false;
	}
	
}


public class C03ObjectMain2 {

	public static void main(String[] args) {
		C03Simple ob1 = new C03Simple(10);
		System.out.println(ob1.toString());

	}

}

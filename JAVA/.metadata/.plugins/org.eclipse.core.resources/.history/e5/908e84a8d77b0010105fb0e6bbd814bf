package Ch03;

class C04Person{
	String name;
	int age;
	// 디폴트 생성자
	public C04Person(){};
	// 모든인자 생성자
	public C04Person(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	}
	// toString 재정의
	@Override
	public String toString() {
		return "C04Person [name=" + name + ", age=" + age + "]";
	}
	
}

	public class C04ClassArrayMain중요함 {
		//★☆★☆★☆★☆★☆클래스형 배열 만들기☆★☆★☆★☆★
		public static void main(String[] args) {
			C04Person list[] = new C04Person[3];
			
			list[0] = new C04Person(); // 2. 요소의 관련된 객체를 연결해줘야함.
			list[0].name = "홍길동";
			list[0].age = 55;
			
			System.out.println(list[0]); // 1. 리스트가 Null이라 name의 위치를 모른다.

	}

}

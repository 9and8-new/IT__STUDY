package Ch04;

class C02Simple{
	
	static int n1; 		
	int n2;				// 객체를 만들어야 생김
	
	void func1() {		// 객체가 있어야 호출됨
		n1=100;
		n2=200;
	}
	static void func2() {
		n1=300;
//		n2=400;
		// 먼저 만들어진 n1에는 접근가능, 하지만 n2는 객체를 생성해야만 나오는 개별공간이라
		// n2는 만들어졌는지 안만들어졌는지 모름 = 오류발생
		// static 함수에서 사용되는 변수는, static변수 or 지역변수만 가능(일반멤버변수 사용x)
	}
	
	
}


public class C02StaticMain주의할점 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		C02Simple ob1 = new C02Simple(); 
		C02Simple ob2 = new C02Simple();
		
		ob1.func2();
		
	}

}
